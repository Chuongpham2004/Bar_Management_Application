<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.barmanagement.controller.MenuManagementController">
    <top>
        <ToolBar>
            <Label text="Tên món:"/>
            <TextField fx:id="txtName" promptText="Coca Cola"/>
            <Label text="Giá:"/>
            <TextField fx:id="txtPrice" promptText="15000"/>
            <Label text="Loại:"/>
            <ComboBox fx:id="cbCategory"/>
            <Button text="Thêm" onAction="#add" fx:id="btnAdd"/>
            <Button text="Cập nhật" onAction="#update" fx:id="btnUpdate"/>
            <Button text="Xoá" onAction="#delete" fx:id="btnDelete"/>
            <Button text="Refresh" onAction="#refresh" fx:id="btnRefresh"/>
            <Button text="← Quay lại" onAction="#goBack"/>
            <Separator/>
        </ToolBar>
    </top>

    <center>
        <TableView fx:id="tableView">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colName" text="Tên món" prefWidth="220"/>
                <TableColumn fx:id="colCategory" text="Loại" prefWidth="120"/>
                <TableColumn fx:id="colPrice" text="Giá" prefWidth="120"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
