<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.barmanagement.controller.PaymentController"
      spacing="15" alignment="CENTER"
      prefWidth="600" prefHeight="400"
      stylesheets="@/css/style.css">

    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <Label text="Thanh toán" style="-fx-font-size: 24px;"/>

    <!-- Tổng tiền -->
    <Label text="Tổng tiền:" style="-fx-font-size: 16px;"/>
    <Label fx:id="totalLabel" style="-fx-font-size: 20px; -fx-text-fill: green;"/>

    <!-- Chọn phương thức thanh toán -->
    <ComboBox fx:id="paymentMethodCombo"
              promptText="Chọn phương thức thanh toán"
              maxWidth="300"/>

    <!-- Nhập số tiền khách trả -->
    <TextField fx:id="paidAmountField" promptText="Số tiền khách đưa" maxWidth="300"/>

    <!-- Hiển thị tiền thối hoặc cảnh báo -->
    <Label fx:id="changeLabel" style="-fx-font-size: 16px; -fx-text-fill: red;"/>

    <!-- Nút xác nhận và quay lại -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Xác nhận thanh toán"
                onAction="#handleConfirmPayment"
                fx:id="confirmButton"
                maxWidth="150"/>
        <Button text="Quay lại"
                onAction="#handleBack"
                fx:id="backButton"
                maxWidth="100"/>
    </HBox>

</VBox>
