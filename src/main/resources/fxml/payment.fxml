<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.barmanagement.controller.PaymentController"
      spacing="15" alignment="CENTER"
      prefWidth="900" prefHeight="600"
      stylesheets="@/css/style.css">

    <Label text="Thanh toán" style="-fx-font-size: 24px;"/>
    <Label fx:id="totalAmountLabel" style="-fx-font-size: 20px; -fx-text-fill: green;"/>
    <ComboBox fx:id="paymentMethodCombo" promptText="Chọn phương thức thanh toán" maxWidth="300"/>
    <Button text="Xác nhận thanh toán" onAction="#handleConfirmPayment" maxWidth="300"/>

</VBox>
