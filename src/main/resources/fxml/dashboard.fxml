<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.barmanagement.DashboardController" styleClass="dashboard-container">

    <!-- Top Bar -->
    <top>
        <VBox styleClass="top-bar">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <padding>
                    <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                </padding>

                <Label text="🍺" styleClass="header-icon">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>

                <VBox>
                    <Label text="Bar Management System" styleClass="header-title">
                        <font>
                            <Font name="System Bold" size="20.0" />
                        </font>
                    </Label>
                    <Label fx:id="welcomeLabel" text="Xin chào, Admin!" styleClass="welcome-text">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Label>
                </VBox>

                <HBox HBox.hgrow="ALWAYS" />

                <VBox alignment="CENTER_RIGHT">
                    <Label fx:id="dateTimeLabel" text="01/01/2025 12:00:00" styleClass="datetime-text">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Label>
                </VBox>

                <Button fx:id="logoutButton" text="Đăng xuất" onAction="#handleLogout" styleClass="logout-button">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>
            </HBox>
            <Separator />
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="30">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <!-- Statistics Section -->
            <VBox spacing="15">
                <Label text="Thống kê tổng quan" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <VBox fx:id="statsContainer" spacing="15" />
            </VBox>

            <!-- Quick Actions -->
            <VBox spacing="15">
                <Label text="Chức năng chính" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <GridPane hgap="20" vgap="20">
                    <!-- Row 1 -->
                    <Button fx:id="tableManagementButton" text="📋 Quản lý bàn" onAction="#handleTableManagement"
                            styleClass="dashboard-button" prefWidth="250" prefHeight="100" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>

                    <Button fx:id="orderManagementButton" text="📝 Quản lý đơn hàng" onAction="#handleOrderManagement"
                            styleClass="dashboard-button" prefWidth="250" prefHeight="100" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>

                    <Button fx:id="productManagementButton" text="🍽️ Quản lý sản phẩm" onAction="#handleProductManagement"
                            styleClass="dashboard-button" prefWidth="250" prefHeight="100" GridPane.columnIndex="2" GridPane.rowIndex="0">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>

                    <!-- Row 2 -->
                    <Button fx:id="reportsButton" text="📊 Báo cáo" onAction="#handleReports"
                            styleClass="dashboard-button" prefWidth="250" prefHeight="100" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>

                    <Button text="⚙️ Cài đặt" styleClass="dashboard-button" prefWidth="250" prefHeight="100"
                            GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>

                    <Button text="ℹ️ Hỗ trợ" styleClass="dashboard-button" prefWidth="250" prefHeight="100"
                            GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>
                </GridPane>
            </VBox>
        </VBox>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="status-bar">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>

            <Label text="Trạng thái: Hoạt động" styleClass="status-text">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>

            <Separator orientation="VERTICAL" />

            <Label text="Kết nối cơ sở dữ liệu: Bình thường" styleClass="status-text">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
        </HBox>
    </bottom>
</BorderPane>
