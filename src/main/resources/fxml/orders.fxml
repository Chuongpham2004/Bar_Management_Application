<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.barmanagement.controller.OrdersController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-padding: 20;">
         <children>
            <Label fx:id="welcomeLabel" text="Quản lý Đơn hàng" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
         </children>
      </HBox>
      
      <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 40;">
         <children>
            <Label text="🍸 Quản lý Đơn hàng" style="-fx-font-size: 32px; -fx-font-weight: bold;" />
            <Label text="Chức năng đang được phát triển..." style="-fx-font-size: 16px; -fx-text-fill: #666;" />
         </children>
      </VBox>
      
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="backButton" text="← Quay lại" style="-fx-background-color: #666; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20;" onAction="#goBack" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>