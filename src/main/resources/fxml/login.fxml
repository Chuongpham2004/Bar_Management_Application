                                <Label text="Mật khẩu" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <PasswordField fx:id="passwordField" prefHeight="45.0" prefWidth="300.0" promptText="Nhập mật khẩu..." style="-fx-background-color: #0f3460; -fx-text-fill: white; -fx-prompt-text-fill: #B0B0B0; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 10;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </PasswordField>
                            </children>
                        </VBox>

                        <!-- Remember Me & Forgot Password -->
                        <HBox alignment="CENTER" prefWidth="300.0" spacing="80.0">
                            <children>
                                <CheckBox fx:id="rememberMeCheckbox" text="Ghi nhớ đăng nhập" textFill="#B0B0B0">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </CheckBox>

                                <Hyperlink onAction="#handleForgotPassword" text="Quên mật khẩu?" textFill="#e16428">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Hyperlink>
                            </children>
                        </HBox>

                        <!-- Status Label -->
                        <Label fx:id="statusLabel" prefWidth="300.0" textAlignment="CENTER" wrapText="true">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>

                        <!-- Login Button with Loading -->
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: linear-gradient(45deg, #e16428 0%, #f5576c 100%); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 25; -fx-cursor: hand;" text="Đăng nhập">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                    <effect>
                                        <DropShadow color="#e16428" radius="15.0" />
                                    </effect>
                                </Button>

                                <ProgressIndicator fx:id="loadingIndicator" prefHeight="30.0" prefWidth="30.0" style="-fx-progress-color: #e16428;" />
                            </children>
                        </VBox>
                    </children>
                    <effect>
                        <DropShadow color="#000000" radius="20.0" />
                    </effect>
                </VBox>

                <!-- Footer -->
                <VBox alignment="CENTER" spacing="5.0">
