<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2);" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.barmanagement.controller.LoginController">
   <children>
      <Label text="BAR MANAGEMENT" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" />
      <Label text="Hệ thống quản lý quầy bar" style="-fx-text-fill: white; -fx-font-size: 16px;" />
      
      <VBox alignment="CENTER" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;" maxWidth="400">
         <children>
            <Label text="ĐĂNG NHẬP" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />
            
            <VBox spacing="10">
               <Label text="Tên đăng nhập:" />
               <TextField fx:id="usernameField" promptText="Nhập tên đăng nhập" style="-fx-font-size: 14px;" />
            </VBox>
            
            <VBox spacing="10">
               <Label text="Mật khẩu:" />
               <PasswordField fx:id="passwordField" promptText="Nhập mật khẩu" style="-fx-font-size: 14px;" />
            </VBox>
            
            <Button fx:id="loginButton" text="Đăng nhập" style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20;" onAction="#handleLogin" />
            
            <Label text="Demo: admin/admin123" style="-fx-text-fill: #666; -fx-font-size: 12px;" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>