<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.barmanagement.controller.LoginController"
      alignment="CENTER" spacing="20"
      prefWidth="900" prefHeight="600"
      stylesheets="@/css/style.css">

   <padding>
      <Insets top="40" right="40" bottom="40" left="40"/>
   </padding>

   <Label text="🍺" styleClass="logo-icon">
      <font><Font size="48"/></font>
   </Label>
   <Label text="Bar Management System" styleClass="app-title">
      <font><Font name="System Bold" size="24"/></font>
   </Label>
   <Label text="Hệ thống quản lý quầy bar" styleClass="app-subtitle"/>

   <VBox spacing="10" styleClass="login-form" maxWidth="300">
      <Label text="Tên đăng nhập:" styleClass="field-label"/>
      <TextField fx:id="usernameField" promptText="Nhập tên đăng nhập" styleClass="login-field"/>

      <Label text="Mật khẩu:" styleClass="field-label"/>
      <PasswordField fx:id="passwordField" promptText="Nhập mật khẩu" styleClass="login-field"/>

      <Label fx:id="errorLabel" visible="false" styleClass="error-label"/>

      <Button fx:id="loginButton" text="Đăng nhập" styleClass="primary-button" onAction="#handleLogin" maxWidth="Infinity"/>
      <Button text="Quên mật khẩu?" styleClass="link-button" onAction="#handleForgotPassword" maxWidth="Infinity"/>
   </VBox>

</VBox>
