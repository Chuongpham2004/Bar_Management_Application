<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.barmanagement.controller.TableManagementController">
    <top>
        <ToolBar>
            <Button text="Refresh" onAction="#refresh" fx:id="btnRefresh"/>
            <Separator/>
            <Label text="Tên bàn:"/>
            <TextField fx:id="txtName" promptText="Bàn 1"/>
            <Label text="Trạng thái:"/>
            <ComboBox fx:id="cbStatus"/>
            <Button text="Thêm" onAction="#add" fx:id="btnAdd"/>
            <Button text="Cập nhật" onAction="#update" fx:id="btnUpdate"/>
            <Button text="Xoá" onAction="#delete" fx:id="btnDelete"/>

            <Button text="← Quay lại" onAction="#goBack"/>
            <Separator/>
        </ToolBar>
    </top>

    <center>
        <TableView fx:id="tableView">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colName" text="Tên bàn" prefWidth="200"/>
                <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="120"/>
                <TableColumn fx:id="colPayment" text="Thanh toán" prefWidth="120"/>
            </columns>
        </TableView>
    </center>



    <bottom>
        <HBox spacing="8">
            <padding>
                <Insets topRightBottomLeft="10.0"/>
            </padding>
            <Button text="Đặt trống" onAction="#setEmpty"   fx:id="btnEmpty"/>
            <Button text="Đã có khách" onAction="#setOccupied" fx:id="btnOccupied"/>
            <Button text="Đã đặt trước" onAction="#setReserved" fx:id="btnReserved"/>
        </HBox>
    </bottom>
</BorderPane>
