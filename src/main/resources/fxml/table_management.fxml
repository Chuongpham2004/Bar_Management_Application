<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.barmanagement.controller.TableManagementController"
      spacing="15"
      prefWidth="900"
      prefHeight="600"
      stylesheets="@../css/style.css">

    <!-- Padding -->
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <!-- Tiêu đề -->
    <Label text="Danh sách bàn" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- Khu vực hiển thị bàn -->
    <FlowPane fx:id="tableContainer" hgap="10" vgap="10" prefWrapLength="880">
        <!-- Các bàn sẽ được load bằng code -->
    </FlowPane>

</VBox>
