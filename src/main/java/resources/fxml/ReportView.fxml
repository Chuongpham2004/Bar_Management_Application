<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.bar_management_application.controller.ReportController"
      spacing="10" styleClass="content-pane">

    <Label text="Reports &amp; Analytics" styleClass="section-title"/>

    <!-- BarChart doanh thu -->
    <BarChart fx:id="salesChart" prefHeight="400" prefWidth="600">
        <xAxis>
            <CategoryAxis fx:id="monthAxis" label="Month"/>
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="revenueAxis" label="Revenue"/>
        </yAxis>
    </BarChart>

    <!-- PieChart thống kê theo category -->
    <PieChart fx:id="categoryPieChart" prefHeight="300" prefWidth="400"/>

</VBox>



