<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.bar_management_application.controller.OrderController"
      spacing="10" styleClass="content-pane">

    <Label text="Order Management" styleClass="section-title"/>

    <TableView fx:id="orderTableView" prefHeight="500">
        <columns>
            <TableColumn text="Order ID" fx:id="colOrderId" prefWidth="100"/>
            <TableColumn text="Table" fx:id="colOrderTable" prefWidth="100"/>
            <TableColumn text="Total" fx:id="colOrderTotal" prefWidth="100"/>
            <TableColumn text="Status" fx:id="colOrderStatus" prefWidth="120"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button fx:id="btnCreateOrder" text="Create Order" styleClass="primary-button"/>
        <Button fx:id="btnCompleteOrder" text="Complete" styleClass="secondary-button"/>
        <Button fx:id="btnDeleteOrder" text="Delete" styleClass="danger-button"/>
    </HBox>

</VBox>

